	  ENDIF
	  IF  DRV_K
XDPH56:	DEFB	TRUE		; --- Seventh Hard Drive/Partition
	DEFB	FIXDSK
	DEFB	2
	DEFB	1
DPH$56:	DEFW	0
	DEFW	0,0,0
	DEFW	DIRBUF
	DEFW	DPB56		; Pointer to DPB for seventh Partition/Drive
