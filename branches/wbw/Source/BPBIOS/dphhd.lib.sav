	DEFW	ALV$56		; Alloc vector for seventh Partition/Drive
	  ENDIF
	  IF  DRV_L
XDPH57:	DEFB	TRUE		; --- Eighth Hard Drive/Partition
	DEFB	FIXDSK
	DEFB	2
	DEFB	1
DPH$57:	DEFW	0
	DEFW	0,0,0
