	DEFW	ALV$53		; Alloc vector for fourth Partition/Drive
	  ENDIF
	  IF  DRV_I
XDPH54:	DEFB	TRUE		; --- Fifth Hard Drive/Partition
	DEFB	FIXDSK
	DEFB	2
	DEFB	1
DPH$54:	DEFW	0
	DEFW	0,0,0
	DEFW	DIRBUF
	DEFW	DPB54		; Pointer to DPB for fifth Partition/Drive
