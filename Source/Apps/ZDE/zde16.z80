	EXX
	LD	HL,TabCnt
	OR	(HL)
	EXX
	INC	A
	JR	IncT
IncH:	LD	A,(Horiz)
IncT:	EXX
	LD	HL,View
	CP	(HL)
	EXX
	RET	NC
	INC	A
	JR	LoadH
RitH:	LD	A,(View)
LoadH:	EX	AF,AF'		;###
	LD	A,(CurCol)	;###
	INC	A		;###
	JR	NZ,LoadH2	;###
	EX	AF,AF'		;###
