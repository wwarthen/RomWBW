	LD	E,A
	LD	A,(PNum)	;Pnum+Pbeg-1 = Lastpage#
	DEC	A
	ADD	A,E
	JP	C,NPquit	;255 page limit
	CP	C
	JP	C,NPquit	;"#" pages printed... quit.
	LD	A,(PBeg)
	LD	C,A
	LD	A,(PageN)
	CP	C
	LD	HL,POByt
	JR	C,NP10		;are we "@" yet?
