	LD	DE,DspEsc
	CALL	GoTo
	CALL	MakAlt
	POP	HL
	LD	B,3
	CALL	BHLMsg
	LD	B,1
	CALL	BBlank
	LD	DE,DspEsQ	;position cursor
	CALL	GoTo
