	CALL	DotChk		;(maybe ignore dot command lines)
	CP	CR
	JR	NZ,Sk2Pr
	CALL	PrOut		;It's a CR
	PUSH	BC
	PUSH	HL
	CALL	Keybd
	CP	ESC		;Abort request?
	POP	HL
	POP	BC
	JR	Z,Sk1Pr
	LD	A,(POByt)
