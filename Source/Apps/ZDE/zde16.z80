	JR	Z,Sk3aPr
	LD	C,FF
Sk3aPr:	LD	A,C
	CALL	PrOut
Sk4Pr:	LD	HL,PCodes	;undo toggles if on
	LD	DE,16
	LD	B,4
Lp2Pr:	BIT	7,(HL)
	JR	Z,Lp2PrF
	RES	7,(HL)
	PUSH	BC
	PUSH	DE
	PUSH	HL
	LD	DE,8
	ADD	HL,DE
	LD	B,(HL)
	INC	HL
	CALL	LSTStr
	POP	HL
	POP	DE
	POP	BC
