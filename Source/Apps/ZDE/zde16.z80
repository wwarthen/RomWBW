	OR	A
	JR	Z,Sk0Pr
	DEC	B
	JR	Z,Sk01Pr
Sk0Pr:	LD	A,B
	OR	A		;Not paginating? B is and stays 0
	LD	A,(LFChr)	;Add usual line feed
	JR	Z,Sk2Pr
	DJNZ	Sk2Pr
Sk01Pr:	CALL	PgBrk		;time for NEW PAGE
	JR	C,Sk4Pr		;done?
	JR	Sk2aPr
