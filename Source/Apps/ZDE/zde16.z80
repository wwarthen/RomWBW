IncV:	EXX
	LD	HL,(CurLin)
	INC	HL
	LD	(CurLin),HL
	EXX
IncVO:	LD	A,(Vert)	;returns Z if cannot Inc
	EXX
	LD	HL,TxtLns
	CP	(HL)
	EXX
	JR	Z,LoadV
	INC	A
	JR	LoadV
BotV:	LD	A,(TxtLns)
LoadV:	LD	(Vert),A
	RET
LftH:	LD	A,1
	JR	LoadH
LTabH:	LD	A,(Horiz)
	DEC	A
	JR	Z,RitH
	CALL	WhatC		;ouch, got to calculate
