TITLE	DTBF	Runtime data buffer
;
TRSDOS	EQU	0
OASIS	EQU	0
;
IF2
IFT	TRSDOS
.PRINTX/TRSDOS VERSION/
ENDIF
IFT	OASIS
.PRINTX/OASIS VERSION/
ENDIF
ENDIF
;
ENTRY	$DTBF,$DTBF1,$DTBF3,$DTBF5,$DTBF7,$DTBF8,$DTBFA
;
DSEG
;
$DTBF:	DS	1	;DATA BUFFER
$DTBF1:	DS	2
$DTBF3:	DS	2
$DTBF5:	DS	2
$DTBF7:	DS	1
$DTBF8:	DS	8
$DTBFA:	DS	145-16
IFT	TRSDOS
	DS	115	;TRSDOS USES UP TO 256 BYTE BUFFERS
ENDIF
IFT	OASIS
	DS	375	;OASIS USES UP TO 512 BYTE BUFFERS
ENDIF
;
CSEG
ENTRY	$FORLN,$UFMLN
;
$FORLN:
IFT	TRSDOS
	DW	256
ENDIF
IFT	OASIS
	DW	512
ENDIF
IFF	TRSDOS OR OASIS
	DW	132
ENDIF
;
$UFMLN:
IFT	TRSDOS
	DW	256
ENDIF
IFF	TRSDOS
	DW	128
ENDIF
;
	END
